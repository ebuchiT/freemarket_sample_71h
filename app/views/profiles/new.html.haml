.login-contena
  .header
    .header-logo
      = link_to "#" do
        .img
          =image_tag"logo.png"


  .profile-contents
    .profile-panel
      .profile-registration 
        %p.txt 会員情報入力
      .profile-form
        .form-inner
          = form_for profiles_path do |f|
            .field
              .field-input
                = f.label :ニックネーム
                = f.text_field :nickname, autofocus: true,placeholder: '仮）フリマ花子',class:'form-box'
              .field-input
                = f.label :メールアドレス
                = f.email_field :email,placeholder: 'PC、携帯どちらでも可',class:'form-box'
              .field-input
                = f.label :パスワード
                = f.password_field :password, autocomplete: "off",placeholder: '7文字以上の半角英数字',class:'form-box'
              
              .field-input
                = f.label :お名前（全角）
                = f.text_field :family_name,placeholder: '例）山田',class:'form-box'
                = f.text_field :first_name,placeholder: '例）杏',class:'form-box'
              .field-input
                = f.label :お名前カナ（全角）
                = f.text_field :family_name_kana,placeholder: '例）ヤマダ',class:'form-box'
                = f.text_field :first_name_kana,placeholder: '例）アン',class:'form-box'
              .field-input
                = f.label :生年月日
                != sprintf(f.date_select(:birthday, prefix:'birthday',with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'

              .actions
                = f.submit "登録", class:'btn'


        