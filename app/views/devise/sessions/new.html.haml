.login-contena
  .header
    .header__logo
      = link_to "#" do
        .img
          =image_tag asset_path("logo.png")
  .login-contents
    .login-panel
      .new-account
        .no-account-box
          %p.txt アカウントをお持ちでない方はこちら
          .new-account
            = link_to new_user_registration_path do
              ="新規会員登録"
      .login-account
        .list-box
          .list-box__facebook
            = link_to "#" do
              ="facebookでログイン"
          .list-box__google
            = link_to "#" do
              ="googleでログイン"
      .address-login-form
        .address-login-form__inner
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .field
              .field__input
                = f.email_field :email, autofocus: true,placeholder: 'メールアドレス',class:'form-box'
              .field__input
                = f.password_field :password, autocomplete: "off",placeholder: 'パスワード',class:'form-box'
              .actions
                = f.submit "ログイン", class:'login_btn'
              %p.forget-password
                = link_to "#" do
                  ="パスワードをお忘れの方"
  = render partial:"items/footer-transition"

